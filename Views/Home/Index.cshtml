@model List<Course>

<h1>Home PAGE</h1>

@section Header {
@await Html.PartialAsync("_Header")
}


<div class="row">
@foreach(var item in Model){
    if(item.isActive && item.isHome){
<div class="col-3">
    <div class="card">
        <img src="~/img/@item.Image" class="card-img-top" alt="">
        <div class="card-body">
            <h5 class="card-title">@item.Title</h5>
            <p class="card-text">@item.Description</p>
            <a class = "btn btn-danger" asp-controller="Course" asp-action="Details" asp-route-id="@item.Id">Detay @item.Id</a>
        </div>
    </div>
</div>
}
}
</div>